<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XGBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="backgroundColor">@color/background_light</item>
        <item name="backgroundContainer">@color/container_light</item>
        <item name="backgroundContainerSelect">@color/green_200</item>
        <item name="colorControlNormal">@color/background_dark</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorPrimaryDark">@color/green_900</item>
        <item name="colorOnPrimary">@color/background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_900</item>
        <item name="textFillColor">@color/background_dark</item>
    </style>

    <style name="FileButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?textFillColor</item>
        <item name="android:backgroundTint">@drawable/file_item_selector</item>
    </style>

    <style name="ControlViewGroupHeader" parent="Widget.AppCompat.ButtonBar">
        <item name="android:textColor">?textFillColor</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ControlViewGroupHeader.DefaultColor" parent="ControlViewGroupHeader">
        <item name="android:backgroundTint">?colorPrimaryVariant</item>
    </style>

    <style name="ControlViewGroupElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>