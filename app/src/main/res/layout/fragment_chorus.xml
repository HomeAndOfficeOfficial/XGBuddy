<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chorusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/chorus"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spChorusType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@id/chorusTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chorusTitle" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chorusTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:background="@drawable/container_bg_shape"
            android:orientation="vertical">

            <com.yamahaw.xgbuddy.ui.custom.ControlViewGroup
                android:id="@+id/cvgChorus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/fx_chor_params"
                app:cvgLabel="Chorus">

                <LinearLayout
                    android:id="@+id/llChorusExtras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.yamahaw.xgbuddy.ui.custom.SliderControlView
                        android:id="@+id/cvChorusReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:pcId="@string/fxpc_chor_ret" />

                    <com.yamahaw.xgbuddy.ui.custom.SliderControlView
                        android:id="@+id/cvChorusPan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:pcId="@string/fxpc_chor_pan" />

                    <com.yamahaw.xgbuddy.ui.custom.SliderControlView
                        android:id="@+id/cvChorusToRev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:pcId="@string/fxpc_chor_send_rev" />
                </LinearLayout>

            </com.yamahaw.xgbuddy.ui.custom.ControlViewGroup>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>