<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.24"
        android:padding="8dp">

        <EditText
            android:id="@+id/editTextVoiceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.xgbuddy.ui.custom.SliderControlView
            android:id="@+id/cvVoiceLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextVoiceName" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvVoiceLevel"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/llPrimaryControlContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/elementEditContainer0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.38"
        tools:layout="@layout/fragment_element_edit" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/elementEditContainer1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.38"
        tools:layout="@layout/fragment_element_edit" />

</LinearLayout>