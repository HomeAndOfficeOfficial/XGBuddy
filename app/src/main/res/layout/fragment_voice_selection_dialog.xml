<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/voice_select_dialog_width"
    android:layout_height="@dimen/voice_select_dialog_height">

    <RadioGroup
        android:id="@+id/rgVoiceCategory"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RadioButton
            android:id="@+id/rbXGVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XG Normal" />

        <RadioButton
            android:id="@+id/rbXGDrum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XG Drum" />

        <RadioButton
            android:id="@+id/rbXGSfx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SFX" />

        <RadioButton
            android:id="@+id/rbQs300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QS300" />
    </RadioGroup>

    <!--    <com.google.android.material.navigationrail.NavigationRailView-->
