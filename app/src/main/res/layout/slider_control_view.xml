<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvParamLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/cpSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tvParamValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvParamLabel" />

    <TextView
        android:id="@+id/tvParamValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="127"
        app:layout_constraintBottom_toBottomOf="@id/cpSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cpSlider" />

</androidx.constraintlayout.widget.ConstraintLayout>