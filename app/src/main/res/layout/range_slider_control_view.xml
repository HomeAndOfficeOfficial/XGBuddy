<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pcRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/tvParamLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/cpRangeSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/tvParamValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvParamLabel" />

        <TextView
            android:id="@+id/tvParamValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="127"
            app:layout_constraintBottom_toBottomOf="@id/cpRangeSlider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cpRangeSlider" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</merge>
